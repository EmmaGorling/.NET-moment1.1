<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Moment1.1</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/moment1._1.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <div class="container d-flex justify-content-between">
            <a id="logo-link" asp-area="" asp-page="/Index"><img id="header-logo" src="~/Logga_lila.svg" alt="Logga Emma Görling"></a>
            <partial name="_Date" />
        </div>
    </header>

    <div class="container">
        <main role="main" class="py-3">
            @RenderBody()
        </main>
    </div>

    <footer class=" footer text-muted mt-auto">
        <div class="container text-center">
            <p class="mt-3">Av Emma Ådahl Görling - Kontakta mig via e-post: <a class="link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" href="mailto:adahl.gorling@gmail.com">adahl.gorling@@gmail.com</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/menu.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
